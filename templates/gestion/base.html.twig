{% extends 'base.html.twig' %}

{% block main_class %}with-adminbar{% endblock %}

{% block header_wrapper %}{% endblock %}

{% block navbar_layout %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
  <div class="container p-0">
    {% block navbar_left %}
    <ul class="navbar-nav mr-auto">
      {% block navbar_left_custom %}
      <li class="nav-item">
        <a class="nav-link" href="{{ path('index') }}">
          <i class="fas fa-angle-left"></i>
          Accueil
        </a>
      </li>
      {% endblock %}
    </ul>
    {% endblock %}
    {% block navbar_right %}
    <ul class="navbar-nav">
      {% block navbar_right_custom %}
      {% endblock %}
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="admin-menu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Aller Ã 
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="admin-menu">
          <a class="dropdown-item" href="{{ path('page_admin_list') }}">Pages</a>
          <a class="dropdown-item" href="{{ path('page_admin_route') }}">Arborescence</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Logout</a>
        </div>
      </li>
    </ul>
    {% endblock %}
  </div>
</nav>
{% endblock %}

{% block breadcrumb %}
<div class="container">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          {% block breadcrumb_content %}
          <li class="breadcrumb-item active" aria-current="page">Administration</li>
          {% endblock %}
        </ol>
      </nav>
    </div>
  </div>
</div>
{% endblock %}

{% block layout %}
<div class="container">
  {% block main_content %}
  <div class="main clearfix">
    <div class="row main-content">
      <div class="col">
        {% block header %}
        <h1 class="mb-3">{% block header_title %}{{ block('title') }}{% endblock %}</h1>
        {% endblock header %}
        {% block body %}
        BODY
        {% endblock body %}
      </div>
    </div>
  </div>
  {% endblock main_content %}
</div>
{% endblock layout %}

{% block asset_footer_gestion %}
{{ encore_entry_script_tags('app.gestion') }}
{% endblock %}
